@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}
@model HAFD.DTOs.LoginResponseDTO

@{ if (@Model != null)
    {
    <div class="">
        <img src="data:image/png;base64, @Convert.ToBase64String(@Model.Image)">
        <h2 class="text-center">@Model.Firstname @Model.Lastname</h2>
        <div class="row">
            <h5 class="col-md-6">Email: @Model.Email</h5>
            <h5 class="col-md-6">Email: @Model.PhoneNumber</h5>
        </div>
        <div class="row">
            <h5 class="col-md-6">Email: @Model.Gender</h5>
            <h5 class="col-md-6">Email: @Model.Department</h5>
        </div>
    </div>
    }
}