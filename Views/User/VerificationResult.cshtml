@model List<User>
@{
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
    ViewData["Title"] = "Verification";
}

@{ if (Model != null)
    {
        foreach (var user in Model)
        {
            <div class="">
                <img src="data:image/png;base64, @Convert.ToBase64String(@user.Image)">
                <h2 class="text-center">@user.Firstname @user.Lastname</h2>
                <div class="row">
                    <h5 class="col-md-6">Email: @user.Email</h5>
                    <h5 class="col-md-6">Email: @user.PhoneNumber</h5>
                </div>
                <div class="row">
                    <h5 class="col-md-6">Email: @user.Gender</h5>
                    <h5 class="col-md-6">Email: @user.Department</h5>
                </div>
            </div>
        }
    }
}